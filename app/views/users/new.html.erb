<h1>Create a New User:</h1>

<%= form_for @user, url: "/create" do |f| %>
    <%= f.label :name%>
    <%= f.text_field :name  %>

    <%= f.label :password%>
    <%= f.text_field :password  %>

    <%= f.label :password_confirmation%>
    <%= f.text_field :password_confirmation  %>

    <%= f.submit %>
<% end %>